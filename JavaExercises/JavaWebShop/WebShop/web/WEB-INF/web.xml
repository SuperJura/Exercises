<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>Filters.AuthFilter</filter-class>
    </filter>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>Servlets.PocetnaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>KategorijeServlet</servlet-name>
        <servlet-class>Servlets.KategorijeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProizvodiServlet</servlet-name>
        <servlet-class>Servlets.ProizvodiServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>KosaricaServlet</servlet-name>
        <servlet-class>Servlets.KosaricaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PaginationServlet</servlet-name>
        <servlet-class>Servlets.PaginationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfilServlet</servlet-name>
        <servlet-class>Servlets.ProfilServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>KategorijeServlet</servlet-name>
        <url-pattern>/Kategorije</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProizvodiServlet</servlet-name>
        <url-pattern>/Proizvodi</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>KosaricaServlet</servlet-name>
        <url-pattern>/Kosarica</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PaginationServlet</servlet-name>
        <url-pattern>/Pagination</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProfilServlet</servlet-name>
        <url-pattern>/Profil</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/Pocetna</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>Pocetna</welcome-file>
    </welcome-file-list>
</web-app>
